  "version": "0.2.0",
  "configurations": [
    {
      "name": "Sleephoria",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "--no-sound-null-safety"
        // don't add --verbose if you want fewer Gradle logs
      ]
    },
    {
      "name": "Sleephoria (profile mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile",
      "program": "lib/main.dart",
      "args": ["--no-sound-null-safety"]
    },
    {
      "name": "Sleephoria (release mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "program": "lib/main.dart",
      "args": ["--no-sound-null-safety"]
    }
  ]
}
